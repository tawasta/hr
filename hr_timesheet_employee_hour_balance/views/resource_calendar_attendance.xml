<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_resource_calendar_attendance_tree" model="ir.ui.view">
        <field name="name">resource.calendar.attendance.tree.working.time</field>
        <field name="model">resource.calendar.attendance</field>
        <field
            name="inherit_id"
            ref="resource.view_resource_calendar_attendance_tree"
        />
        <field name="arch" type="xml">
            <field name="hour_to" position="after">
                <field name="total_hours" widget="float_time" optional="show" />
            </field>
        </field>
    </record>
</odoo>
